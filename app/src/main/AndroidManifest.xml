<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.template">
    <!-- Internet permission for RSS implementation -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name=".team_builder"
            android:label="@string/title_activity_team_builder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RSS_view"
            android:label="@string/title_activity_rss_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RSSActivityBrowser"
            android:label="@string/title_activity_rss_browser_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Login_view" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".Main_menu_view" />
        <activity
            android:name=".teamStarter"
            android:label="@string/title_activity_team_starter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Individual_Pokemon_view"
            android:label="@string/title_activity_individual__pokemon_view"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FAQ"
            android:label="FAQ"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PokedexView"
            android:label="PokedexView"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonalDex"
            android:label="PersonalDex"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>